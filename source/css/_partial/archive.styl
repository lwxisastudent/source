#archive
  .post-year
    list-style-type: none

  .post-list
    padding: 0

    .post-item
      margin-bottom: 1rem
      margin-left: 0
      list-style-type: none

      .meta
        display: block
        margin-right: 16px
        min-width: 100px
        color: $color-meta
        font-size: 14px
        
      .meta2
        display: block
        margin-right: 16px
        overflow: hidden;
        width: 150px;
        height: 20px;
        color: $color-meta
        font-size: 14px
        
        a
          background-image: none

  @media (min-width: 480px)
    .post-list
      .post-item
        display: flex
        margin-bottom: 5px
        margin-left: 1rem

        .meta
          text-align: left


header
  .categorytitle
    margin-top: 2%
    margin-bottom: 2%
    text-transform: none
    font-size: 2em
    line-height: 1.25