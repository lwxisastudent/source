$base-style
  h1, .h1
    display: block
    margin-bottom: 1rem
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 700
    font-style: normal

    antialias()

  h2, .h2
    position: relative
    display: block
    margin-top: 2rem
    margin-bottom: .5rem
    color: $color-accent-1
    text-transform: none
    letter-spacing: normal
    font-weight: bold
    font-size: 2em

  h3
    color: $color-accent-2
    font-size: 1.3em

  h4
    color: $color-accent-3
    font-size: 1.1em
    
  h3
  h4
    text-decoration: underline
    
  h5
  h6
    text-decoration: none
    color: $color-accent-4
    font-size: 1em

  h3
  h4
  h5
  h6
    font-weight: bold
    margin-top: .9rem
    margin-bottom: .5rem

  hr
    border: .5px dashed $color-accent-3
    opacity: .5
    margin: 0
    margin-top: 20px
    margin-bottom: 20px

  strong
    font-weight: bold

  em
  cite
    font-style: italic

  sup
  sub
    position: relative
    vertical-align: baseline
    font-size: .75em
    line-height: 0

  sup
    top: -.5em

  sub
    bottom: -.2em

  small
    font-size: .85em

  acronym
  abbr
    border-bottom: 1px dotted

  ul
  ol
  dl
    line-height: $line-height

  ul
  ol
    ul
    ol
      margin-top: 0
      margin-bottom: 0

  ol
    list-style: decimal

  dt
    font-weight: bold

  table
    width: 100%
    text-align: left
    overflow: auto
    display: block

  th
    vertical-align: top;
    
    padding: 8px
    border-bottom: 1px dashed $color-border
    color: $color-accent-2
    font-weight: bold

  td
    vertical-align: top;
    
    padding: 0 8px
    border-bottom: none
